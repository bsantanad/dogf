#!/bin/bash
confirm() {
    # call with a prompt string or use a default
    read -r -p "${1:-Are you sure? [y/N]} " response
    case "$response" in
        [yY][eE][sS]|[yY])
            return
            ;;
        *)
            exit 0 
            ;;
    esac
}



dot_dir=$HOME'/.dogf'
if [ -d $dot_dir ] 
then
    echo "[ğŸ¶dogf] there is already an existing installation, do you want to do"`
         `" a refresh install?"
    echo "this will erase the existing installation"
    confirm
fi
rm -rf $dot_dir
echo "[ğŸ¶dogf] installing dogf under $dot_dir"
mkdir $dot_dir
cd $dot_dir
echo "[ğŸ¶dogf] downloading repo"
git clone https://github.com/bsantanad/dogf ./

echo "[ğŸ¶dogf] installing dependecies with pip, dont worry they arent that many"
if command -v pip &> /dev/null
then
    pip install --user -r requirements.txt
else
    echo "[ğŸ¶dogf] pip not found in system, trying with pip3"
    if command -v pip3 &> /dev/null
    then
        pip3 install --user -r requirements.txt
    else
        echo "[ğŸ¶dogf] ERROR: nor pip3 or pip found in system"
        exit
    fi
fi

echo "[ğŸ¶dogf] linking dogf to /usr/bin, we are going to need sudo for that"
sudo ln -sf $(pwd)/dogf /usr/bin/dogf

# FIXME create virtualenv
